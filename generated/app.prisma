datasource db {
  provider = "postgresql"
  url      = env("APP_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./prisma-client"
}

model Goods {
  id        String   @id @default(uuid())
  name String
  sku String?
  unit String?
  primarySupplier String?
  description String?
  price Decimal?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Client {
  id        String   @id @default(uuid())
  name String
  taxCode String?
  phone String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GoodsReceipt {
  id        String   @id @default(uuid())
  number String
  date DateTime @default(now())
  supplier String?
  totalAmount Decimal?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GoodsShipment {
  id        String   @id @default(uuid())
  number String
  date DateTime @default(now())
  customer String?
  totalAmount Decimal?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
